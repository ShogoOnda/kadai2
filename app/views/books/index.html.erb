<p id="notice"></p>
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>

    <%= @lists.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "show",  %></td>
      <td>
        <a data-confirm="Are you sure?" class="destroy_56043" rel="nofllow" data-method="delete" href="/books/56043">Destroy</a>
      </td>
    </tr>
  </tbody>
</table>

<h2>New book</h2>
<!-- form_with部分-->
<%= form_with model:@book do |f| %>

<div class="field">
  <label for="book_title">Title</label>
  <%= f.text_field:title %>
</div>

<div class="field">
  <label for="book_body">Body</label>
  <%= f.text_field:title %>
</div>

<%= f.submit'Create Book' %>

<% end %>