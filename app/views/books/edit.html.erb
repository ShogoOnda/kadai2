<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>

    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

<div class="field">
  <% if @book.errors.include?(:title) %>
    <div class="field_with_errors">
    <label for="book_title">Title</label>
    </div>
    <div class="field_with_errors">
    <%= f.text_field:title %>
    </div>
  <% else %>
    <label for="book_title">Title</label>
    <%= f.text_field:title %>
  <% end %>
</div>

<div class="field">
  <% if @book.errors.include?(:body) %>
    <div class="field_with_errors">
    <label for="book_body">Body</label>
    </div>
    <div class="field_with_errors">
    <%= f.text_area:body %>
    </div>
  <% else %>
    <label for="book_body">Body</label>
    <%= f.text_area:body %>
    </div>
  <% end %>
</div>

<div class="actions">
  <%= f.submit 'Update Book' %>
</div>
<% end %>

<td><%= link_to "Show", book_path(@book.id) %></td>
